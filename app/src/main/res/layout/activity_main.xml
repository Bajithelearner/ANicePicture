<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thevampire007.anicepicture.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"

        android:layout_above="@+id/brefresh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:src="@drawable/minato"
        android:visibility="visible" />

    <Button
        android:id="@+id/brefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_toLeftOf="@+id/blike"
        android:layout_toStartOf="@+id/blike"
        android:text="Refresh" />

    <TextView
        android:id="@+id/photobyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/unsplashTV"
        android:layout_alignBottom="@+id/unsplashTV"
        android:layout_alignLeft="@+id/bdownload"
        android:layout_alignStart="@+id/bdownload"
        android:text="Photo By"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/unsplashTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameTV"
        android:layout_alignEnd="@+id/blike"
        android:layout_alignRight="@+id/blike"
        android:layout_marginBottom="12dp"
        android:text="On Unsplash.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:id="@+id/bdownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="Save" />

    <Button
        android:id="@+id/blike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="Like" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/brefresh"
        android:layout_alignEnd="@+id/unsplashTV"
        android:layout_alignLeft="@+id/photobyTV"
        android:layout_alignRight="@+id/unsplashTV"
        android:layout_alignStart="@+id/photobyTV"
        android:layout_marginBottom="13dp"
        android:autoLink="web"
        android:linksClickable="true"

        android:text="Name: http://www.google.com"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title" />


</RelativeLayout>
